FROM node:22-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p /app/uploads

# Expose ports
EXPOSE 3000 9229

# Start development server with hot-reload
CMD ["npm", "run", "dev"]
